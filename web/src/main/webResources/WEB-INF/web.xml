       <filter>
        <display-name>SiteminderRoleFixFilter</display-name>
        <filter-name>SiteminderRoleFixFilter</filter-name>
        <filter-class>org.lmv.geodata.web.tomcat.filter.SiteminderRoleFixFilter</filter-class>
